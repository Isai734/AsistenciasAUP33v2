<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12sp"
        app:cardElevation="@dimen/fab_margin">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txv_semestre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/card_actions_padding"
                android:paddingTop="@dimen/card_text_padding_top"
                android:text="SEGUNDO"
                android:textSize="@dimen/card_subtext_right_left_padding"
                 />

            <TextView
                android:id="@+id/txv_turno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txv_semestre"
                android:paddingLeft="@dimen/card_actions_padding"
                android:text="FEB-JUL 2017"
                android:layout_marginBottom="@dimen/card_actions_padding"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textSize="@dimen/card_subtext_size" />

            <LinearLayout
                android:id="@+id/txv_grup"
                android:layout_width="@dimen/card_area_size"
                android:layout_height="@dimen/card_area_size"
                android:layout_alignParentRight="true"
                android:background="@color/colorAccent"
                android:layout_margin="@dimen/text_margin"
                android:orientation="vertical"
                android:paddingTop="@dimen/card_area_top_padding">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="201"
                    android:id="@+id/txv_grupo"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/card_subtext_right_left_padding"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:text="Grupo"
                    android:textSize="@dimen/card_subtext_right_left_padding" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_pasar_lista"
                android:background="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/card_actions_padding"
                android:paddingRight="@dimen/card_actions_padding"
                android:textColor="@android:color/white"
                android:layout_margin="@dimen/card_actions_padding"
                android:layout_below="@+id/txv_turno"
                android:text="pasar lista" />
        </RelativeLayout>


    </android.support.v7.widget.CardView>
</FrameLayout>
